<h2>Chat with your AI</h2>

<div id="messages"></div>

<form id="message-form" autocomplete="off" >
	<input autocomplete="false" name="hidden" type="text" style="display:none;">
    <input autocomplete="off" name="message" placeholder="Message" type="text">
    <button class="btn--tertiary">Send</button>
</form>

<script id="message-template" type="text/html">
    <div class="chat__message">
		<span class="chat__message-date">[[createdAt]]:</span>
        <p class="chat__message-content">[[message]]</p>
    </div>
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="../../lib/js/chat.js"></script>